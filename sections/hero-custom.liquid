{{ 'hero.css' | asset_url | stylesheet_tag }}

<div class="hero">
  <div class="hero--container">
    <h1 class="hero--heading">{{ section.settings.heading | newline_to_br }}</h1>
    <p class="hero--description">{{ section.settings.description | newline_to_br }}</p>
    <div class="hero--buttons">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="hero--button hero--button-primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}
      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="hero--button hero--button-secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>
    <div class="hero--social-proof">
      <div class="hero--stars">
        {% for i in (1..5) %}
          <span class="hero--star {% if i <= section.settings.stars %} hero--star--active {% endif %}">★</span>
        {% endfor %}
      </div>
      <span>{{ section.settings.rating }} | {{ section.settings.review_count }} reviews | {{ section.settings.client_count }} clients</span>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Custom",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "FUEL STRENGTH. HYDRATION.\nRECOVERY — WITHOUT POWDERS."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Science-formulated performance gummies delivering Creatine, BCAAs and Collagen in precise daily doses your body actually uses."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Gummies"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "View The Science"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "range",
      "id": "stars",
      "label": "Number of Stars",
      "default": 5,
      "min": 1,
      "max": 5,
      "step": 1
    },
    {
      "type": "text",
      "id": "rating",
      "label": "Rating Text",
      "default": "4.9"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review Count",
      "default": "5000+"
    },
    {
      "type": "text",
      "id": "client_count",
      "label": "Client Count",
      "default": "50k+"
    }
  ],
  "presets": [
    {
      "name": "Hero Custom"
    }
  ]
}
{% endschema %}
